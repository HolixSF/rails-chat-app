<div class="container">
	<div class="row">
      	<div class="col-md-8">
      		<div class="card text-xs-center">
      			<div class="card-header">
      				<h3><%= @chat_room.title %></h3>
      			</div>
      			<div class="card-block message-board">
      				<ul class="media-list" id="messages" data-chat-room-id="<%= @chat_room.id %>">
      					<%= render @chat_room.messages %>
      				</ul>
      			</div>
      			<div class="card-footer">
      				<%= form_for @message, url: '#' do |f| %>
						<div class="input-group">
							<%= f.text_field :body, placeholder: "Enter Message", class: "form-control" %>
							<span class="input-group-btn">
								<%= f.submit "SEND", class: 'btn btn-info' %>
							</span>
						</div>
					<% end %>
      			</div>
      		</div>
      	</div>
      	<div class="col-md-4">
      		<div class="card">
      			<div class="card-header text-xs-center">
      				<h3>ADD CHAT ROOM</h3>
      			</div>
      			<div class="card-block text-xs-left">
      				<%= form_for @chat_room, url: {controller: "chat_rooms", action: "create"} do |f| %>
						<div class="form-group">
							<%= f.text_field :title, autofocus: true, value: 'Title', class: 'form-control' %>
						</div>
						<%= f.submit "Add!", class: 'btn btn-primary' %>
					<% end %>
      			</div>
      		</div>
      	</div>
	</div>
</div>



